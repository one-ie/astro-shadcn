---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import {
  Github,
  Check,
  Rocket,
  Lock,
  Mail,
  Key,
  RotateCcw,
  MailOpen,
  Wand2,
  Sparkles,
  Zap,
  Palette,
  Atom,
  FileText,
  Bot,
  Shield,
  Target,
  Moon,
  Laptop
} from 'lucide-react';
---

<Layout title="ONE Stack - The Ultimate Astro Starter Template">
  <!-- Hero Section -->
  <section class="relative overflow-hidden px-4 py-16 sm:px-6 sm:py-24 md:px-8 md:py-32 lg:py-40">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-primary/5 via-background to-background"></div>
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent"></div>

    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="flex flex-col items-center space-y-8 text-center">
        <Badge variant="secondary" className="inline-flex items-center gap-2 text-sm font-medium" data-usal="fade-down duration-600">
          <Rocket className="h-4 w-4" />
          Astro 5 + React 19 + shadcn/ui + Better Auth + Convex
        </Badge>

        <h1 class="font-heading text-4xl font-bold leading-tight tracking-tight sm:text-6xl md:text-7xl lg:text-8xl" data-usal="fade-up duration-700 delay-100">
          The <span class="text-primary">Ultimate</span> Astro
          <br />Starter Template
        </h1>

        <p class="max-w-3xl text-xl leading-relaxed text-muted-foreground sm:text-2xl" data-usal="fade-up duration-700 delay-200">
          Ship production-ready SaaS apps in hours, not weeks. <strong class="text-foreground">6 authentication methods</strong>,
          <strong class="text-foreground">50+ components</strong>, real-time backend, and <strong class="text-foreground">perfect Lighthouse scores</strong> — all pre-configured.
        </p>

        <div class="flex flex-col gap-4 pt-4 sm:flex-row sm:items-center" data-usal="fade-up duration-700 delay-300">
          <a href="https://github.com/one-ie/stack" target="_blank" rel="noopener noreferrer">
            <Button size="lg" className="h-14 w-full sm:w-auto px-8 text-base font-semibold shadow-lg shadow-primary/25 transition-all hover:shadow-xl hover:shadow-primary/30">
              <Github className="mr-2 h-5 w-5" />
              View on GitHub
            </Button>
          </a>
          <a href="/account/signup">
            <Button variant="outline" size="lg" className="h-14 w-full sm:w-auto px-8 text-base font-semibold">
              Try Live Demo
            </Button>
          </a>
        </div>

        <div class="flex flex-wrap items-center justify-center gap-6 pt-2 text-sm text-muted-foreground" data-usal="fade-in duration-700 delay-400">
          <span class="flex items-center gap-1.5">
            <Check className="h-4 w-4 text-green-500" />
            100/100 Lighthouse
          </span>
          <span class="flex items-center gap-1.5">
            <Check className="h-4 w-4 text-green-500" />
            TypeScript Strict Mode
          </span>
          <span class="flex items-center gap-1.5">
            <Check className="h-4 w-4 text-green-500" />
            MIT License
          </span>
          <span class="flex items-center gap-1.5">
            <Check className="h-4 w-4 text-green-500" />
            Production Ready
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="border-y bg-muted/50 px-4 py-16 sm:px-6 md:px-8">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
        <div class="space-y-2 text-center" data-usal="fade-up duration-600 delay-100">
          <div class="text-5xl font-bold text-primary">6</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">Auth Methods</div>
        </div>
        <div class="space-y-2 text-center" data-usal="fade-up duration-600 delay-200">
          <div class="text-5xl font-bold text-primary">50+</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">UI Components</div>
        </div>
        <div class="space-y-2 text-center" data-usal="fade-up duration-600 delay-300">
          <div class="text-5xl font-bold text-primary">100</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">Lighthouse Score</div>
        </div>
        <div class="space-y-2 text-center" data-usal="fade-up duration-600 delay-400">
          <div class="text-5xl font-bold text-primary">3</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">MCP Servers</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Authentication Showcase -->
  <section class="px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Lock className="h-4 w-4" />
          Enterprise Authentication
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          6 Authentication Methods
          <br />
          <span class="text-muted-foreground">Pre-Configured & Production-Ready</span>
        </h2>
        <p class="mx-auto max-w-2xl text-lg leading-relaxed text-muted-foreground" data-usal="fade-up duration-700 delay-200">
          Most templates give you nothing. We give you everything. Email/password, OAuth, magic links, 2FA, password reset, and email verification — all working out of the box.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Mail className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Email/Password</CardTitle>
            <CardDescription className="leading-relaxed">
              Secure password hashing, session management, HttpOnly cookies. Password strength indicator included.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">SHA-256</Badge>
              <Badge variant="secondary" className="border-border/50">30-day sessions</Badge>
              <Badge variant="secondary" className="border-border/50">Auto cleanup</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Key className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">OAuth Social Login</CardTitle>
            <CardDescription className="leading-relaxed">
              GitHub and Google OAuth pre-configured. Add more providers in minutes. Seamless session management.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">GitHub</Badge>
              <Badge variant="secondary" className="border-border/50">Google</Badge>
              <Badge variant="secondary" className="border-border/50">State validation</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <RotateCcw className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Password Reset</CardTitle>
            <CardDescription className="leading-relaxed">
              Email-based password reset with secure tokens. Custom HTML templates. 1-hour expiry for security.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Resend emails</Badge>
              <Badge variant="secondary" className="border-border/50">1-hour expiry</Badge>
              <Badge variant="secondary" className="border-border/50">Rate limited</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <MailOpen className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Email Verification</CardTitle>
            <CardDescription className="leading-relaxed">
              Automated verification emails on sign-up. 24-hour tokens. Beautiful email templates with Resend.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Auto-send</Badge>
              <Badge variant="secondary" className="border-border/50">24-hour tokens</Badge>
              <Badge variant="secondary" className="border-border/50">Custom templates</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Wand2 className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Magic Links</CardTitle>
            <CardDescription className="leading-relaxed">
              Passwordless authentication. One-click sign-in via email. 15-minute expiry. One-time use only.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Passwordless</Badge>
              <Badge variant="secondary" className="border-border/50">15-min expiry</Badge>
              <Badge variant="secondary" className="border-border/50">One-time use</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Lock className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Two-Factor Auth (TOTP)</CardTitle>
            <CardDescription className="leading-relaxed">
              Google Authenticator, Authy, 1Password compatible. QR code setup. 10 backup codes for recovery.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">TOTP</Badge>
              <Badge variant="secondary" className="border-border/50">QR code</Badge>
              <Badge variant="secondary" className="border-border/50">Backup codes</Badge>
            </div>
          </CardContent>
        </Card>
      </div>

      <div class="mt-12 text-center">
        <p class="text-sm text-muted-foreground">
          + Rate limiting on all endpoints • Session management • Security best practices built-in
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="bg-muted/50 px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Sparkles className="h-4 w-4" />
          Everything You Need
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          Production-Ready
          <br />
          <span class="text-muted-foreground">From Day One</span>
        </h2>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Zap className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Real-time Backend</CardTitle>
            <CardDescription className="leading-relaxed">
              Convex database with typed functions, subscriptions, and automatic API generation. Zero backend code needed.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Palette className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">50+ UI Components</CardTitle>
            <CardDescription className="leading-relaxed">
              Complete shadcn/ui library pre-installed. Buttons, forms, dialogs, tables, charts — everything you need.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Atom className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">React 19 on Edge</CardTitle>
            <CardDescription className="leading-relaxed">
              The "impossible" achievement — Full React 19 SSR on Cloudflare Workers using react-dom/server.edge.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <FileText className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Advanced Blog System</CardTitle>
            <CardDescription className="leading-relaxed">
              Multi-view layouts, real-time search, auto-generated ToC, social sharing, RSS feed. Content collections with Zod.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Bot className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">MCP Integration</CardTitle>
            <CardDescription className="leading-relaxed">
              3 pre-configured MCP servers for AI-assisted development. Component installation, deployment, and docs — all automated.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Mail className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Email System</CardTitle>
            <CardDescription className="leading-relaxed">
              @convex-dev/resend component for transactional emails. Password reset, verification, magic links — all configured.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Shield className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Enterprise Security</CardTitle>
            <CardDescription className="leading-relaxed">
              Rate limiting, session management, HttpOnly cookies, CSRF protection. Built-in brute force prevention.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Target className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Perfect Lighthouse</CardTitle>
            <CardDescription className="leading-relaxed">
              100/100 across all metrics. Performance, accessibility, best practices, SEO — all perfect out of the box.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Moon className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Dark Mode</CardTitle>
            <CardDescription className="leading-relaxed">
              Beautiful dark mode with no FOUC. Tailwind v4 CSS-based configuration. LocalStorage persistence.
            </CardDescription>
          </CardHeader>
        </Card>
      </div>
    </div>
  </section>

  <!-- Code Example Section -->
  <section class="px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Laptop className="h-4 w-4" />
          Developer Experience
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          Beautiful Code
          <br />
          <span class="text-muted-foreground">TypeScript Strict Mode</span>
        </h2>
      </div>

      <div class="grid gap-8 lg:grid-cols-2">
        <div class="group" data-usal="fade-right duration-700 delay-100">
          <h3 class="mb-4 text-xl font-semibold">Sign Up — 3 Lines of Code</h3>
          <div class="overflow-hidden rounded-lg border border-border/50 bg-card/50 backdrop-blur transition-all group-hover:border-primary/20 group-hover:bg-card group-hover:shadow-lg group-hover:shadow-primary/5">
            <div class="border-b border-border/50 bg-muted/50 px-4 py-2 text-xs text-muted-foreground">
              src/components/auth/SimpleSignUpForm.tsx
            </div>
            <pre class="overflow-x-auto p-4 text-sm"><code class="language-typescript">{`const result = await authClient.signUp.email({
  email,
  password,
  name,
});`}</code></pre>
          </div>
          <p class="mt-4 text-sm leading-relaxed text-muted-foreground">
            That's it. Email verification, rate limiting, password hashing — all handled.
          </p>
        </div>

        <div class="group" data-usal="fade-left duration-700 delay-100">
          <h3 class="mb-4 text-xl font-semibold">Real-time Queries — Fully Typed</h3>
          <div class="overflow-hidden rounded-lg border border-border/50 bg-card/50 backdrop-blur transition-all group-hover:border-primary/20 group-hover:bg-card group-hover:shadow-lg group-hover:shadow-primary/5">
            <div class="border-b border-border/50 bg-muted/50 px-4 py-2 text-xs text-muted-foreground">
              convex/auth.ts
            </div>
            <pre class="overflow-x-auto p-4 text-sm"><code class="language-typescript">{`export const getCurrentUser = query({
  args: { token: v.optional(v.string()) },
  handler: async (ctx, args) => {
    // Fully typed, reactive query
  },
});`}</code></pre>
          </div>
          <p class="mt-4 text-sm leading-relaxed text-muted-foreground">
            Convex provides full TypeScript types and real-time reactivity automatically.
          </p>
        </div>

        <div class="group" data-usal="fade-right duration-700 delay-200">
          <h3 class="mb-4 text-xl font-semibold">shadcn/ui Components</h3>
          <div class="overflow-hidden rounded-lg border border-border/50 bg-card/50 backdrop-blur transition-all group-hover:border-primary/20 group-hover:bg-card group-hover:shadow-lg group-hover:shadow-primary/5">
            <div class="border-b border-border/50 bg-muted/50 px-4 py-2 text-xs text-muted-foreground">
              src/pages/index.astro
            </div>
            <pre class="overflow-x-auto p-4 text-sm"><code class="language-astro">{`<Button client:load size="lg">
  Click me!
</Button>

<Card>
  <CardHeader>
    <CardTitle>Beautiful Card</CardTitle>
  </CardHeader>
</Card>`}</code></pre>
          </div>
          <p class="mt-4 text-sm leading-relaxed text-muted-foreground">
            50+ components ready to use. Dark mode, variants, animations — all included.
          </p>
        </div>

        <div class="group" data-usal="fade-left duration-700 delay-200">
          <h3 class="mb-4 text-xl font-semibold">MCP AI Assistance</h3>
          <div class="overflow-hidden rounded-lg border border-border/50 bg-card/50 backdrop-blur transition-all group-hover:border-primary/20 group-hover:bg-card group-hover:shadow-lg group-hover:shadow-primary/5">
            <div class="border-b border-border/50 bg-muted/50 px-4 py-2 text-xs text-muted-foreground">
              Chat with Claude Code
            </div>
            <pre class="overflow-x-auto p-4 text-sm"><code class="language-bash">{`You: "Add the calendar component"

Claude: [Uses shadcn MCP]
✓ Added calendar component
✓ Installed dependencies
✓ Updated imports
✓ Here's an example...`}</code></pre>
          </div>
          <p class="mt-4 text-sm leading-relaxed text-muted-foreground">
            AI assistant can install components, deploy, and access docs — all automatically.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack -->
  <section class="border-y bg-muted/50 px-6 py-24 md:px-8 md:py-32">
