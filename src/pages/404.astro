---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
---

<Layout title="404 - Page Not Found">
  <div
    class="flex flex-col items-center justify-center min-h-[calc(100vh-16rem)] text-center"
  >
    <div class="space-y-6 max-w-2xl mx-auto px-4">
      <h1 class="font-heading text-8xl sm:text-9xl font-bold text-primary">
        404
      </h1>
      <h2 class="text-3xl sm:text-4xl font-semibold">Page Not Found</h2>
      <p class="text-lg text-muted-foreground max-w-md mx-auto">
        Sorry, we couldn't find the page you're looking for. It might have been
        moved or deleted.
      </p>
      <div class="pt-4">
        <a href="/">
          <Button size="lg"> Go Home </Button>
        </a>
      </div>
    </div>
  </div>
</Layout>
