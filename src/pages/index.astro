---
import Layout from '../layouts/Layout.astro';
import { Chart } from '../components/Chart';
---

<Layout title="Astro + shadcn/ui">
  <section class="space-y-6 px-4 pb-8 pt-6 md:px-6 md:pb-12 md:pt-10 lg:py-32">
    <div class="mx-auto flex max-w-[64rem] flex-col items-center gap-4 text-center">
      <h1 class="font-heading text-3xl sm:text-5xl md:text-6xl lg:text-7xl">
        Build beautiful websites with Astro 5 and shadcn/ui
      </h1>
      <p class="max-w-[42rem] px-4 leading-normal text-muted-foreground sm:px-0 sm:text-xl sm:leading-8">
        A beautiful, modern website template built with Astro and shadcn/ui.
        Featuring dark mode, responsive design, and great typography.
      </p>
      <div class="flex flex-col gap-3 sm:flex-row sm:gap-4">
        <a
          href="https://ui.shadcn.com"
          class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90"
        >
          Documentation
        </a>
        <a
          href="https://github.com/one-ie/astro-shadcn"
          class="inline-flex items-center justify-center rounded-md border border-input bg-background px-6 py-3 text-sm font-medium shadow-sm transition-colors hover:bg-accent hover:text-accent-foreground"
        >
          GitHub
        </a>
      </div>
    </div>
  </section>

  <section class="space-y-6 px-4 py-8 md:px-6 md:py-12 lg:py-24">
    <h2 class="mb-8 text-center text-2xl font-bold tracking-tight sm:text-3xl">
      Analytics Overview
    </h2>
    <div class="mx-auto max-w-7xl">
      <Chart client:load />
    </div>
  </section>

  <section class="space-y-6 px-4 py-8 md:px-6 md:py-12 lg:py-24">
    <div class="mx-auto flex max-w-[58rem] flex-col items-center space-y-4 text-center">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl">
        Lighthouse Scores
      </h2>
      <p class="max-w-[85%] px-4 leading-normal text-muted-foreground sm:px-0 sm:text-lg sm:leading-7">
        Optimized for the best possible performance and accessibility
      </p>
    </div>
    <div class="mx-auto grid max-w-4xl grid-cols-2 gap-4 md:grid-cols-4 md:gap-6">
      <div class="relative overflow-hidden rounded-lg border bg-background p-2">
        <div class="flex h-[140px] flex-col items-center justify-center rounded-md p-4 text-center md:h-[150px] md:p-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="mb-3 h-10 w-10 text-green-500 md:mb-4 md:h-12 md:w-12"
            aria-hidden="true"
          >
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
          </svg>
          <div class="space-y-1 md:space-y-2">
            <p class="text-xl font-bold md:text-2xl">100</p>
            <p class="text-xs text-muted-foreground md:text-sm">Performance</p>
          </div>
        </div>
      </div>

      <div class="relative overflow-hidden rounded-lg border bg-background p-2">
        <div class="flex h-[140px] flex-col items-center justify-center rounded-md p-4 text-center md:h-[150px] md:p-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="mb-3 h-10 w-10 text-green-500 md:mb-4 md:h-12 md:w-12"
            aria-hidden="true"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
          <div class="space-y-1 md:space-y-2">
            <p class="text-xl font-bold md:text-2xl">100</p>
            <p class="text-xs text-muted-foreground md:text-sm">Accessibility</p>
          </div>
        </div>
      </div>

      <div class="relative overflow-hidden rounded-lg border bg-background p-2">
        <div class="flex h-[140px] flex-col items-center justify-center rounded-md p-4 text-center md:h-[150px] md:p-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="mb-3 h-10 w-10 text-green-500 md:mb-4 md:h-12 md:w-12"
            aria-hidden="true"
          >
            <path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path>
          </svg>
          <div class="space-y-1 md:space-y-2">
            <p class="text-xl font-bold md:text-2xl">100</p>
            <p class="text-xs text-muted-foreground md:text-sm">Best Practices</p>
          </div>
        </div>
      </div>

      <div class="relative overflow-hidden rounded-lg border bg-background p-2">
        <div class="flex h-[140px] flex-col items-center justify-center rounded-md p-4 text-center md:h-[150px] md:p-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="mb-3 h-10 w-10 text-green-500 md:mb-4 md:h-12 md:w-12"
            aria-hidden="true"
          >
            <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"></path>
            <line x1="4" y1="22" x2="4" y2="15"></line>
          </svg>
          <div class="space-y-1 md:space-y-2">
            <p class="text-xl font-bold md:text-2xl">100</p>
            <p class="text-xs text-muted-foreground md:text-sm">SEO</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
