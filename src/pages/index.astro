---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import {
  Github,
  Check,
  Rocket,
  Users,
  Box,
  GitBranch,
  Activity,
  Brain,
  Coins,
  Wand2,
  Sparkles,
  Zap,
  Globe,
  Shield,
  Target,
  TrendingUp,
  Code,
  DollarSign,
  Network,
  Bot
} from 'lucide-react';
---

<Layout title="ONE - Build AI Agents, Applications, and Your Audience">
  <!-- Hero Section -->
  <section class="relative overflow-hidden px-4 py-20 sm:px-6 sm:py-28 md:px-8 md:py-36 lg:py-48">
    <!-- Animated gradient background with enhanced effects -->
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-primary/5 via-primary/[0.02] to-background"></div>
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-primary/5 to-transparent"></div>
    <div class="absolute left-1/2 top-0 -z-10 h-[600px] w-[800px] -translate-x-1/2 rounded-full bg-primary/10 blur-[120px]"></div>

    <div class="mx-auto max-w-full sm:max-w-7xl">
      <div class="flex flex-col items-center space-y-10 text-center">
        <!-- Badge with enhanced styling -->
        <div data-usal="fade-down duration-600">
          <Badge variant="secondary" className="inline-flex items-center gap-2 border-primary/20 bg-primary/5 px-4 py-2 text-sm font-semibold shadow-lg shadow-primary/10 backdrop-blur-sm transition-all hover:bg-primary/10 hover:shadow-xl hover:shadow-primary/20">
            <Sparkles className="h-4 w-4 text-primary" />
            Free Forever • Deploy in Minutes • Own 100%
          </Badge>
        </div>

        <!-- Main headline with enhanced typography -->
        <div class="space-y-6" data-usal="fade-up duration-700 delay-100">
          <h1 class="font-heading font-extrabold leading-[1.1] tracking-tight text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl">
            <span class="block">Make Your Ideas</span>
            <span class="block">Reality With AI</span>
          </h1>

          <p class="mx-auto max-w-4xl text-lg leading-relaxed text-muted-foreground sm:text-xl md:text-2xl lg:text-3xl">
             Generate AI agents, apps, content and thriving audiences by speaking English. 
         Everything you need to run an AI business—free, open source, yours.
          </p>
        </div>

        <!-- CTA Buttons with enhanced design -->
        <div class="flex flex-col gap-4 pt-6 sm:flex-row sm:items-center sm:gap-6" data-usal="fade-up duration-700 delay-200">
          <a href="https://github.com/one-ie/stack" target="_blank" rel="noopener noreferrer" class="group">
            <Button size="lg" className="h-16 w-full sm:w-auto px-10 text-lg font-bold shadow-2xl shadow-primary/30 transition-all hover:scale-105 hover:shadow-[0_20px_60px_-15px] hover:shadow-primary/40">
              <Github className="mr-3 h-6 w-6 transition-transform group-hover:rotate-12" />
              Download Free
            </Button>
          </a>
          <a href="/account/signup" class="group">
            <Button variant="outline" size="lg" className="h-16 w-full sm:w-auto border-2 border-primary/20 px-10 text-lg font-bold transition-all hover:scale-105 hover:border-primary/40 hover:bg-primary/5">
              <Rocket className="mr-3 h-6 w-6 transition-transform group-hover:-translate-y-1" />
              Start Building Now
            </Button>
          </a>
        </div>

        <!-- Quick value props with enhanced styling -->
        <div class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4 pt-6 text-base font-medium sm:text-lg" data-usal="fade-in duration-700 delay-300">
          <span class="flex items-center gap-2.5 transition-colors hover:text-primary">
            <div class="flex h-6 w-6 items-center justify-center rounded-full bg-green-500/20">
              <Check className="h-4 w-4 text-green-500" />
            </div>
            <span>No credit card</span>
          </span>
          <span class="flex items-center gap-2.5 transition-colors hover:text-primary">
            <div class="flex h-6 w-6 items-center justify-center rounded-full bg-green-500/20">
              <Check className="h-4 w-4 text-green-500" />
            </div>
            <span>Deploy in 5 min</span>
          </span>
          <span class="flex items-center gap-2.5 transition-colors hover:text-primary">
            <div class="flex h-6 w-6 items-center justify-center rounded-full bg-green-500/20">
              <Check className="h-4 w-4 text-green-500" />
            </div>
            <span>Unlimited edge requests</span>
          </span>
          <span class="flex items-center gap-2.5 transition-colors hover:text-primary">
            <div class="flex h-6 w-6 items-center justify-center rounded-full bg-green-500/20">
              <Check className="h-4 w-4 text-green-500" />
            </div>
            <span>Own your data</span>
          </span>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-6 pt-8 opacity-60" data-usal="fade-in duration-700 delay-400">
          <div class="flex items-center gap-2 text-sm font-medium">
            <Shield className="h-5 w-5" />
            <span>Enterprise Ready</span>
          </div>
          <div class="flex items-center gap-2 text-sm font-medium">
            <Zap className="h-5 w-5" />
            <span>Edge Native</span>
          </div>
          <div class="flex items-center gap-2 text-sm font-medium">
            <Globe className="h-5 w-5" />
            <span>Open Source</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Five Pillars Showcase -->
  <section class="px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Network className="h-4 w-4" />
          The Ontology
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          Five Pillars
          <br />
          <span class="text-muted-foreground">One Unified Model</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground" data-usal="fade-up duration-700 delay-200">
          Everything in ONE maps to five simple tables. This ontology makes AI agents intelligent, features composable, and your business scalable.
        </p>
      </div>

      <!-- People at the top -->
      <div class="mb-8 flex justify-center" data-usal="fade-up duration-600 delay-100">
        <Card className="group w-full max-w-2xl border-2 border-primary/30 bg-gradient-to-br from-primary/10 to-primary/5 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/40 hover:shadow-2xl hover:shadow-primary/10">
          <CardHeader className="space-y-4 text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-xl bg-primary/20 transition-colors group-hover:bg-primary/30">
              <Users className="h-8 w-8 text-primary" />
            </div>
            <CardTitle className="text-2xl">People</CardTitle>
            <CardDescription className="text-base leading-relaxed">
              Set intent, govern outcomes, authorize every action. Humans remain in command while agents execute.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap justify-center gap-2">
              <Badge variant="secondary" className="border-border/50">Intent</Badge>
              <Badge variant="secondary" className="border-border/50">Governance</Badge>
              <Badge variant="secondary" className="border-border/50">Authorization</Badge>
            </div>
          </CardContent>
        </Card>
      </div>

      <!-- Visual connector -->
      <div class="relative mb-8 flex justify-center" data-usal="fade-in duration-600 delay-200">
        <div class="h-12 w-px bg-gradient-to-b from-primary/40 via-primary/20 to-transparent"></div>
      </div>

      <!-- Four foundational pillars -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Box className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Things</CardTitle>
            <CardDescription className="leading-relaxed">
              Every entity — agents, products, audiences, tokens, courses. 66 types out of the box.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Agents</Badge>
              <Badge variant="secondary" className="border-border/50">Products</Badge>
              <Badge variant="secondary" className="border-border/50">Audiences</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <GitBranch className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Connections</CardTitle>
            <CardDescription className="leading-relaxed">
              Express relationships — ownership, memberships, revenue flows. Powers collaboration and value exchange.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Owns</Badge>
              <Badge variant="secondary" className="border-border/50">Member of</Badge>
              <Badge variant="secondary" className="border-border/50">Transacted</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Activity className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Events</CardTitle>
            <CardDescription className="leading-relaxed">
              Chronicle every action — launches, interactions, transactions, insights. Full audit trail built-in.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Created</Badge>
              <Badge variant="secondary" className="border-border/50">Purchased</Badge>
              <Badge variant="secondary" className="border-border/50">Completed</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20 hover:bg-card hover:shadow-lg hover:shadow-primary/5" data-usal="fade-up duration-600 delay-400">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Brain className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Knowledge</CardTitle>
            <CardDescription className="leading-relaxed">
              Store semantics — labels, chunks, embeddings. Makes agents intelligent and enables rich context.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="border-border/50">Tags</Badge>
              <Badge variant="secondary" className="border-border/50">Embeddings</Badge>
              <Badge variant="secondary" className="border-border/50">Context</Badge>
            </div>
          </CardContent>
        </Card>
      </div>

      <div class="mt-12 text-center">
        <p class="text-sm text-muted-foreground">
          Protocol-agnostic clarity • Human oversight • Composable by design
        </p>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="border-y bg-muted/50 px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Zap className="h-4 w-4" />
          How It Works
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          English → Code → Reality
          <br />
          <span class="text-muted-foreground">In Minutes, Not Months</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground" data-usal="fade-up duration-700 delay-200">
          Describe your feature in plain English. The system validates it against the ontology, compiles to TypeScript, generates tests, and deploys to the edge.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
        <Card className="border-border/50 bg-card/50 backdrop-blur" data-usal="fade-up duration-600 delay-100">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-2xl font-bold text-primary">1</div>
            <CardTitle className="text-xl">Write in English</CardTitle>
            <CardDescription className="leading-relaxed">
              Describe what you want: "CREATE ai clone", "CALL OpenAI", "RECORD purchase". Use 15 simple commands anyone can understand.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur" data-usal="fade-up duration-600 delay-200">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-2xl font-bold text-primary">2</div>
            <CardTitle className="text-xl">System Validates</CardTitle>
            <CardDescription className="leading-relaxed">
              Checks against the ontology: Do these entity types exist? Are connections valid? Are services available? Instant feedback.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur" data-usal="fade-up duration-600 delay-300">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-2xl font-bold text-primary">3</div>
            <CardTitle className="text-xl">Code Generated</CardTitle>
            <CardDescription className="leading-relaxed">
              Compiles to production TypeScript with Effect.ts, Convex functions, React components, full test suite. Type-safe, tested, ready.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur" data-usal="fade-up duration-600 delay-400">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-2xl font-bold text-primary">4</div>
            <CardTitle className="text-xl">Deploy to Edge</CardTitle>
            <CardDescription className="leading-relaxed">
              Push to Cloudflare's global network. Unlimited requests, instant updates, zero configuration. Live in 60 seconds.
            </CardDescription>
          </CardHeader>
        </Card>
      </div>

      <div class="mt-16 rounded-lg border border-border/50 bg-card/50 p-8 backdrop-blur">
        <h3 class="mb-6 text-center text-2xl font-bold">Complete Example: AI Clone Feature</h3>
        <div class="grid gap-8 lg:grid-cols-3">
          <div class="space-y-3">
            <div class="flex items-center gap-2 text-sm font-semibold text-primary">
              <div class="flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-xs">1</div>
              You Write
            </div>
            <pre class="overflow-x-auto rounded bg-muted/50 p-3 text-xs leading-relaxed"><code>{`FEATURE: Create AI clone

CHECK videos exist
CALL ElevenLabs clone voice
CALL OpenAI analyze style
CREATE ai clone
CONNECT creator owns clone
RECORD clone created`}</code></pre>
          </div>

          <div class="space-y-3">
            <div class="flex items-center gap-2 text-sm font-semibold text-primary">
              <div class="flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-xs">2</div>
              System Generates
            </div>
            <pre class="overflow-x-auto rounded bg-muted/50 p-3 text-xs leading-relaxed"><code>{`export const createClone =
  mutation(async (ctx, args) => {
  // Validation
  // Service calls
  // Database updates
  // Event logging
  // All typed & tested
});`}</code></pre>
          </div>

          <div class="space-y-3">
            <div class="flex items-center gap-2 text-sm font-semibold text-primary">
              <div class="flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-xs">3</div>
              You Get
            </div>
            <div class="space-y-2 text-sm">
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>Backend API endpoints</span>
              </div>
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>React UI components</span>
              </div>
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>Complete test suite</span>
              </div>
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>Database schema</span>
              </div>
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>Edge deployment</span>
              </div>
              <div class="flex items-center gap-2">
                <Check className="h-4 w-4 text-green-500" />
                <span>Full documentation</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-base text-muted-foreground">
          <strong class="text-foreground">Every feature follows this flow.</strong> Write once in English, deploy everywhere.
          <br class="hidden sm:block" />
          The ontology ensures consistency. The compiler ensures quality. The edge ensures performance.
        </p>
      </div>
    </div>
  </section>

  <!-- AI Agents Section -->
  <section class="px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Bot className="h-4 w-4" />
          AI Agents in English
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          Build Autonomous Agents
          <br />
          <span class="text-muted-foreground">With Plain English Commands</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground" data-usal="fade-up duration-700 delay-200">
          Define AI agents that work like teammates—specialized, coordinated, and always learning. No AI expertise required.
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-2">
        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader>
            <CardTitle className="text-2xl">Sales Agent</CardTitle>
            <CardDescription>Qualifies leads, answers questions, books meetings</CardDescription>
          </CardHeader>
          <CardContent>
            <pre class="overflow-x-auto rounded bg-muted/50 p-4 text-sm leading-relaxed"><code>{`AGENT: Sales Agent

WHEN lead sends message:
  GET lead's history
  CALL OpenAI to qualify intent

  IF interested in demo:
    CALL Calendar API to find slots
    GIVE 3 available times

  IF asking about pricing:
    GET pricing for their size
    CALL OpenAI to explain value

  RECORD interaction
  NOTIFY me if hot lead`}</code></pre>
            <div class="mt-4 flex flex-wrap gap-2">
              <Badge variant="secondary">Auto-qualifies</Badge>
              <Badge variant="secondary">Books meetings</Badge>
              <Badge variant="secondary">24/7 available</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader>
            <CardTitle className="text-2xl">Content Agent</CardTitle>
            <CardDescription>Generates posts, schedules publishing, analyzes performance</CardDescription>
          </CardHeader>
          <CardContent>
            <pre class="overflow-x-auto rounded bg-muted/50 p-4 text-sm leading-relaxed"><code>{`AGENT: Content Agent

EVERY DAY at 8am:
  GET my writing style
  GET trending topics in my niche
  GET top performing posts

  FOR EACH platform:
    CALL OpenAI to generate post
    CALL OpenAI to generate image
    SCHEDULE post for peak time

  TRACK performance
  LEARN from engagement
  ADJUST strategy weekly`}</code></pre>
            <div class="mt-4 flex flex-wrap gap-2">
              <Badge variant="secondary">Daily automation</Badge>
              <Badge variant="secondary">Multi-platform</Badge>
              <Badge variant="secondary">Self-improving</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader>
            <CardTitle className="text-2xl">Support Agent</CardTitle>
            <CardDescription>Answers customer questions using your knowledge base</CardDescription>
          </CardHeader>
          <CardContent>
            <pre class="overflow-x-auto rounded bg-muted/50 p-4 text-sm leading-relaxed"><code>{`AGENT: Support Agent

WHEN customer asks question:
  SEARCH my knowledge base
  GET relevant docs
  GET similar past answers

  CALL OpenAI with context
  GIVE helpful answer

  IF can't answer confidently:
    NOTIFY support team
    SAVE for knowledge base

  RECORD interaction
  REWARD with tokens`}</code></pre>
            <div class="mt-4 flex flex-wrap gap-2">
              <Badge variant="secondary">Instant answers</Badge>
              <Badge variant="secondary">Learns from docs</Badge>
              <Badge variant="secondary">Escalates smartly</Badge>
            </div>
          </CardContent>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader>
            <CardTitle className="text-2xl">Research Agent</CardTitle>
            <CardDescription>Monitors trends, analyzes competitors, finds opportunities</CardDescription>
          </CardHeader>
          <CardContent>
            <pre class="overflow-x-auto rounded bg-muted/50 p-4 text-sm leading-relaxed"><code>{`AGENT: Research Agent

EVERY WEEK:
  SEARCH web for my keywords
  ANALYZE competitor content
  TRACK industry trends

  CALL OpenAI to summarize
  FIND content gaps
  SPOT opportunities

  CREATE weekly report
  SUGGEST content ideas
  NOTIFY me of insights

  SAVE to knowledge base`}</code></pre>
            <div class="mt-4 flex flex-wrap gap-2">
              <Badge variant="secondary">Weekly reports</Badge>
              <Badge variant="secondary">Competitive intel</Badge>
              <Badge variant="secondary">Opportunity finder</Badge>
            </div>
          </CardContent>
        </Card>
      </div>

      <div class="mt-16 rounded-lg border border-primary/20 bg-primary/5 p-8 text-center backdrop-blur">
        <h3 class="mb-4 text-2xl font-bold">Agents Work Together</h3>
        <p class="mx-auto max-w-2xl text-lg text-muted-foreground">
          Sales Agent books a demo → Content Agent creates follow-up → Support Agent answers questions → Research Agent finds their pain points.
          <br class="mt-2 block" />
          <strong class="text-foreground">They coordinate through the shared ontology, learning from every interaction.</strong>
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="bg-muted/50 px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-full sm:max-w-6xl">
      <div class="mb-20 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2" data-usal="fade-down duration-600">
          <Sparkles className="h-4 w-4" />
          Three Pillars of Growth
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl" data-usal="fade-up duration-700 delay-100">
          AI That Works
