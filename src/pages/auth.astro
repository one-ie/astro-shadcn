---
import Layout from "@/layouts/Layout.astro"
import { AuthUIProvider } from "@/components/auth/AuthUIProvider"
import { AuthView } from "@daveyplate/better-auth-ui"

export const prerender = false

// Redirect if already logged in
if (Astro.locals.user) {
  return Astro.redirect("/dashboard")
}
---

<Layout title="Authentication">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-secondary/10 p-4">
    <div class="w-full max-w-md">
      <AuthUIProvider client:only="react">
        <AuthView client:load />
      </AuthUIProvider>
    </div>
  </main>
</Layout>
